snippet prelude
  #!/usr/bin/env -S -- lua -W --

  $0


snippet predis
  #!/usr/bin/env -S -- redis-cli --eval

  $0


snippet pcall
  local go, ${1:var} = pcall(${0:fn})


snippet wrap
abbr co.wrap
  coroutine.wrap(function()
    ${0}
  end)


snippet yield
abbr co.yield
  coroutine.yield($0)


snippet iife
  (function()
    $0
  end)()
