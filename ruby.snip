snippet prelude
  #!/usr/bin/env -S -- ruby
  # frozen_string_literal: true
  # typed: strong

  Dir.chdir(File.Filename.dirname(__FILE__))

  $0


snippet bug
alias debug
  require('debug'); binding.debugger


snippet heredoc
alias hc
  <<~${1:HEREDOC}
    ${0:...}
  ${1:HEREDOC}


snippet sql
  <<~'SQL'
    ${0:SELECT ...}
  SQL


snippet graphql
alias gql
  <<~'GRAPHQL'
    ${0:query ...}
  GRAPHQL


snippet jq
  <<~'JQ'
    ${0:query ...}
  JQ
